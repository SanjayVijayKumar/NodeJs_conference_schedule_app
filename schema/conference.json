{
    "title": "Conference detail",
    "description": "Provides details about conference scheduled",
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "id": {
        "type": "integer",
        "description": "unique id for a conference"
      },
      "name": {
        "type": "string",
        "description": "name of a conference"
      },
      "start_date": {
        "type": "string",
        "description": "start date of conference"
      },
      "end_date": {
        "type": "string",
        "description": "end date of conference"
      },
      "location": {
        "type": "string",
        "description": "location where conference is happening"
      }
    },
    "required": ["name", "start_date", "end_date", "location"],
    "path": [
    {
        "method": "POST",
        "url": "/api/conference"
    },
    {
        "method": "GET",
        "url": "/api/conferences"
    }
]
  }